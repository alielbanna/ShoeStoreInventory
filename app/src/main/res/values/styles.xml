<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loginTextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorComplementOnePrimary</item>

    </style>

    <style name="applicationButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorComplementOnePrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="cancelButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/grey</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="loginTitle">
        <item name="android:fontFamily">@font/amarante</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginSubTitle">
        <item name="android:fontFamily">@font/amarante</item>
        <item name="android:textColor">@color/colorComplementOnePrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginTextField">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/colorComplementTwoPrimary</item>
        <item name="android:textColor">@color/colorComplementOnePrimary</item>
    </style>

    <style name="applicationText">
        <item name="android:fontFamily">@font/amarante</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title">
        <item name="android:fontFamily">@font/amarante</item>
        <item name="android:textColor">@color/colorComplementOnePrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailsTextField" parent="loginTextField">
        <item name="android:backgroundTint">@color/colorComplementOnePrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/colorComplementTwoPrimary</item>
        <item name="android:textColor">@color/colorComplementOnePrimary</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
